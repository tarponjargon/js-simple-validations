{
  "name": "js-simple-validations",
  "private": false,
  "version": "0.2.4",
  "description": "Form validation tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/tarponjargon/js-simple-validations.git"
  },
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "dist": "webpack --mode production",
    "postdist": "./deploy-prod.sh",
    "dev": "webpack --mode development --output ./build/js-simple-validations.js",
    "postdev": "./deploy-dev.sh",
    "lint:js": "eslint src/ webpack.*.js --cache"
  },
  "keywords": [
    "javascript",
    "form validation",
    "data attribute"
  ],
  "author": "Rory O'Connor",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.4",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^4.5.1",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "jest": "^22.4.4",
    "puppeteer": "^1.4.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.4",
    "webpack-config-utils": "^2.3.0"
  },
  "dependencies": {
    "nodelist-foreach-polyfill": "^1.2.0",
    "promise-polyfill": "7.1.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "shared.js$"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  }
}
