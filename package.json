{
  "name": "js-simple-validations",
  "private": true,
  "version": "0.1.0",
  "description": "Form validation tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/tarponjargon/js-simple-validations.git"
  },
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "webpack --mode production",
    "postbuild": "./deploy-prod.sh",
    "dev": "webpack --mode development --output ./build/js-simple-validations-dev.js",
    "postdev": "./deploy-dev.sh",
    "lint:js": "eslint src/ webpack.*.js --cache"
  },
  "keywords": ["javascript", "form validation", "data attribute"],
  "author": "Rory O'Connor",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "jest": "^22.4.3",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "dependencies": {
    "promise-polyfill": "7.1.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
	"testPathIgnorePatterns": ["/node_modules/", "shared.js$"],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  }

}
